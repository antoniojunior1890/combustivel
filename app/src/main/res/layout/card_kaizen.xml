                <!--android:layout_below="@+id/dataKaizen"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="250dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="20dp"/>-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
